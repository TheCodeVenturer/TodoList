<%- include("header"); -%>
<div class="box" id="heading">
  <h1><%=listTitle%></h1>
</div>
<div class="box">
  <% listItems.forEach(ele => { %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=ele._id%>" onchange="this.form.submit()">
      <p><%=ele.name%></p>
      <input type="hidden" name="listName" value="<%=listTitle%>">
    </div>
  </form>
  <%});%>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="Add Item" autofocus />
    <button type="submit" value="<%=listTitle%>" name="list">+</button>
  </form>
</div>

<%- include("footer"); -%>
